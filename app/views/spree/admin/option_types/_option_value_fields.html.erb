<tr class="option_value fields" id="spree_<%= dom_id(f.object) %>" data-hook="option_value">
  <td class="move-handle text-center">
    <span class="icon icon-move handle"></span>
    <%= f.hidden_field :id %>
  </td>
  <td class="name"><%= f.text_field :name, class: "form-control" %></td>
  <td class="presentation"><%= f.text_field :presentation, class: "form-control" %></td>
  <td align="center">
    <% if f.object.has_image? %>
        <%= image_tag f.object.image.url(:small) %>
        <%= link_to_with_icon 'icon-remove', '', detach_image_admin_option_value_path(f.object), title: Spree.t(:detach_image) %>
    <% end %>
  </td>
  <td><%= f.file_field :image, class: "form-control"  %></td>
  <td class="actions actions-1 text-center"><%= link_to_remove_fields Spree.t(:remove), f, :no_text => true %></td>
</tr>